
TARGET = amsynth.so

OBJECTS = dssi.o

OTHER_OBJECTS = \
	Effects/allpass.o \
	Effects/comb.o \
	Effects/Distortion.o \
	Effects/revmodel.o \
	Effects/SoftLimiter.o \
	VoiceBoard/ADSR.o \
	VoiceBoard/Oscillator.o \
	VoiceBoard/VoiceBoard.o \
	VoiceBoard/LowPassFilter.o \
	Parameter.o \
	Preset.o \
	PresetController.o \
	VoiceAllocationUnit.o \
	Config.o 

all: $(TARGET)

CFLAGS = -Wall -O2
CXXFLAGS = $(CFLAGS)

$(TARGET): $(OBJECTS)
	g++ -shared -lc -lm -o $(TARGET) $(OBJECTS) $(OTHER_OBJECTS)

clean:
	rm $(TARGET) $(OBJECTS)
