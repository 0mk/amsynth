
TARGET = amsynth.so

OBJECTS = dssi.o

OTHER_OBJECTS = \
	Effects/allpass.o \
	Effects/comb.o \
	Effects/Distortion.o \
	Effects/revmodel.o \
	Effects/SoftLimiter.o \
	VoiceBoard/ADSR.o \
	VoiceBoard/Oscillator.o \
	VoiceBoard/VoiceBoard.o \
	VoiceBoard/LowPassFilter.o \
	amSynth-Parameter.o \
	amSynth-Preset.o \
	amSynth-PresetController.o \
	amSynth-VoiceAllocationUnit.o \
	amSynth-Config.o \
	amSynth-controls.o

all: $(TARGET)

CFLAGS = -Wall -O0 -g
CXXFLAGS = $(CFLAGS)

$(TARGET): $(OBJECTS)
	g++ -shared -lc -lm -o $(TARGET) $(OBJECTS) $(OTHER_OBJECTS)

clean:
	rm $(TARGET) $(OBJECTS)
